<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ChatActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_info"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/iv_done"
                app:srcCompat="@drawable/ic_info_outline_black_24dp" />

            <ImageView
                android:id="@+id/iv_done"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_done_black_24dp" />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <!--</RelativeLayout>-->
    <!--android:src="@drawable/ic_done_all_black_24dp"-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_line"
        android:layout_below="@id/tb_main_chat"
        android:layout_margin="10dp" />

    <!-- A horizontal line between the chatbox and RecyclerView -->
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/layout_chatbox"
        android:layout_marginBottom="0dp"
        android:background="#dfdfdf" />


    <LinearLayout
        android:id="@+id/layout_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_image"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_image_black_24dp" />
        <!--android:src="@drawable/ic_crop_original_black_24dp"-->

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/btn_send"
            android:layout_toRightOf="@id/btn_image"
            android:layout_weight="8"
            android:background="@android:color/transparent"
            android:hint="Nhập tin nhắn ở đây..."
            android:maxLines="6"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_send_black_24dp"
            android:clickable="true"
            android:textSize="14dp" />
        <!--android:background="@drawable/ic_send_black_24dp"-->

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>