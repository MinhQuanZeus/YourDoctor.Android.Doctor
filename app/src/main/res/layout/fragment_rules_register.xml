<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".fragments.RulesRegisterFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbRuleRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />
    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/iv_rule"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/tbRuleRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/your_doctor_logo" />

    <TextView
        android:id="@+id/tv_logo_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_rule"
        android:layout_marginTop="10dp"
        android:text="Điều khoản sử dụng app với bệnh nhân và bác sĩ"
        android:textAlignment="center"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content_rule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ln_check"
        android:layout_below="@+id/tv_logo_rule"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:textAlignment="textStart"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ln_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="@color/colorHint"
            android:checked="false"
            android:text="Bạn có đồng ý với điều khoản"
            android:textColor="@color/colorHint"
            android:textSize="11dp" />

        <Button
            android:id="@+id/btn_continue_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/buttonstyleithgradient"
            android:text="Tiếp Tục"
            android:textColor="@color/white" />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_rule"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>