<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp"
        android:layout_margin="1dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/iv_new"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xét xử ông Đinh La Thăng: Tiết lộ bất ngờ của Nguyễn Xuân Sơn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/colorText"
                android:layout_below="@id/iv_new"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="21/03/2018  12:14 GMT+7"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_below="@id/tv_time"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/cardview_dark_background"
                android:text="Đôi nam nữ ở miền Tây đến nhà trọ thuê phòng, sau đó cả hai được phát hiện chết bất thường."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>