<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/imageMessageProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textMessageBody"
        android:text="hi man, how are you s fdfgbfc fgbf fghfdghdfhd?"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_height="wrap_content"
        android:maxWidth="230dp"
        android:textColor="@color/emperor"
        android:layout_toRightOf="@id/imageMessageProfile"
        android:layout_marginLeft="8dp" />
    <!--android:background="@drawable/rounded_rectangle_orange"-->
    <TextView
        android:id="@+id/textMessageTime"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/imageMessageProfile"
        android:layout_below="@id/textMessageBody"/>

</RelativeLayout>